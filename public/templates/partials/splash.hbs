<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      position: relative;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-color: #e80202;
      /* background-color: red; */
    }

    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
      height: 100%;
      position: absolute;
    }

    h2 {
      color: white;
      text-align: center;
      font-size: 12vw;
      line-height: 1em;
      font-weight: 900;
    }

    span {
      font-size: .2em;
      letter-spacing: .4em;
      text-transform: uppercase;
      font-weight: 400;
    }

    .block {
      position: absolute;
      width: 50px;
      height: 100px;
      background: #e80202;
      box-shadow: 10px 10px 50px rgba(0,0,0,0.3);
      z-index: -2;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>
      <!-- <span>My first video on</span>  <br> Animation  -->
      Lava Kumar N R
    </h2>
  </div>

  <script src="anime.min.js"></script>
  <script>
    const container = document.querySelector('.container')
    let i=0;
    for(i;i<50;i++){
      const block = document.createElement('div')
      block.setAttribute('class','block')
      // block.classList.add('blob')
      container.appendChild(block)
    }

    function animateBlocks() {
      anime({
        targets : '.block',
        translateX: () => {
          return anime.random(-600,6200)
        },
        translateY: () => {
          return anime.random(-300,300)
        },
        scale: () => {
          return anime.random(1,3)
        },
        // easing: linear,
        duration: 20000,
        // delay: anime.stagger(10),
      })
    }
    animateBlocks()
  </script>
</body>
</html>